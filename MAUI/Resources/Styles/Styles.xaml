	<Style
		x:Key="EntryPassword"
		BasedOn="{StaticResource EntryWithShadow}"
		TargetType="Entry">
		<Setter Property="IsPassword" Value="True" />
		<Setter Property="IsTextPredictionEnabled" Value="False" />
		<Setter Property="Keyboard" Value="Text" />
	</Style>

	<Style
		x:Key="EntryPassword_100"
		BasedOn="{StaticResource EntryPassword}"
		TargetType="Entry">
		<Setter Property="MaxLength" Value="100" />
	</Style>

