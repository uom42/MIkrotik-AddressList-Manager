	<!--#region ButtonWithShadow-->

	<Style x:Key="ButtonWithShadow" TargetType="Button">

		<Setter Property="Shadow">
			<Setter.Value>
				<Shadow
					Brush="Black"
					Opacity="0.8"
					Radius="40"
					Offset="16,16" />
			</Setter.Value>
		</Setter>


	</Style>

