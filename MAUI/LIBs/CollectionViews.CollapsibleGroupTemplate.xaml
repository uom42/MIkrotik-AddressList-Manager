		</mi:MauiIcon>


		
		
		
	

		
		-->



		<mi:MauiIcon
			Grid.Column="3"
			Icon="{mi:MaterialOutlined Icon=ArrowDropUp,
			                           IconColor={StaticResource Primary}}"
			IsVisible="{Binding IsCollapsed.Invert}" />



		<mi:MauiIcon
			Grid.Column="3"
			Icon="{mi:MaterialOutlined Icon=ArrowDropDown,
			                           IconColor={StaticResource Primary}}"
			IsVisible="{Binding IsCollapsed.Value}" />


		<!--#endregion-->

	</Grid>


	<ContentView.GestureRecognizers>
		<TapGestureRecognizer
			x:Name="grTap"
			Command="{Binding SwitchExpandedStateCommand}"
			CommandParameter="{Binding}"
			NumberOfTapsRequired="1" />

		<TapGestureRecognizer Command="{Binding Source={x:Reference thisRoot}, Path=TappedCommand}" NumberOfTapsRequired="1" />
	</ContentView.GestureRecognizers>

</ContentView>



